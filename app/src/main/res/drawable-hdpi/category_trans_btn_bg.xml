<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#DBEFA8" />
            <stroke
                android:width="4dp"
                android:color="#E3E3E3" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="3dp"
                android:top="3dp"
                android:right="3dp"
                android:bottom="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#F2F2F2"
                android:endColor="#F2F2F2"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#E3E3E3" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="3dp"
                android:top="3dp"
                android:right="3dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>