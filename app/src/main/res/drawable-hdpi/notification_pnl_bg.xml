<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#F0F3F6"
                android:endColor="#FCFDFD"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#BBC2CA" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#F0F3F6"
                android:endColor="#FCFDFD"
                android:angle="270" />
