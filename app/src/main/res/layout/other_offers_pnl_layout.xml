<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/other_offer_background"
    android:paddingStart="1dp"
    android:paddingEnd="1dp"
    android:paddingBottom="1dp"
    android:paddingTop="1dp">


    <ImageView
        android:id="@+id/img_offer_logo"
        android:layout_width="wrap_content"
        android:minWidth="90dp"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/txt_offer_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:text="30%"
        android:layout_alignBottom="@+id/img_offer_logo"
        android:layout_alignParentEnd="@+id/img_offer_logo"
        android:layout_alignEnd="@+id/img_offer_logo"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"/>

</RelativeLayout>