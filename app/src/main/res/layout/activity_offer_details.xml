        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offer_details_pnl"
            android:id="@+id/comments_pnl"
            android:background="#f1f5f8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/add_comment_pnl">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comments"
                android:layout_alignParentEnd="true"
                android:id="@+id/img_comments"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="@string/comments"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:textColor="#4aad9f"
                android:id="@+id/comments_lbl"
                android:layout_toStartOf="@+id/img_comments"
                android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/add_comment_btn"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/img_add_comment"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/no_comments_pnl"
                android:background="#ffffff"
                android:layout_below="@+id/add_comment_pnl"
                android:visibility="gone"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="@string/no_comments"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
            <com.dreamcard.app.components.CustomListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/list"
                android:layout_below="@+id/no_comments_pnl"
                android:background="#f1f5f8"
                android:layout_marginTop="10dp"
                android:divider="@drawable/list_divider"
                android:layout_marginBottom="200dp"/>
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#E38C0B"
            android:layout_alignParentBottom="true"
            android:id="@+id/other_offers_pnl"
            android:visibility="gone"
            android:layout_below="@+id/comments_pnl">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/other_offers_lbl_pnl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:textColor="#ffffff"
                android:text="@string/other_offers"
                android:id="@+id/other_offers_lbl"
                android:textSize="20sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_toLeftOf="@+id/other_offers_lbl"
                android:layout_marginRight="5dp"
                android:id="@+id/txt_other_offer_business_name"
                android:layout_centerVertical="true"/>
            </RelativeLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/other_offers_lbl_pnl"
                android:layout_marginTop="6dp">
                <LinearLayout
                    android:id="@+id/other_offer_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>

    </RelativeLayout>

    </ScrollView>



</RelativeLayout>
