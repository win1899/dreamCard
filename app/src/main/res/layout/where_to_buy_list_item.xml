<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/buy_areas_store_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buy_areas_store_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/buy_areas_store_logo"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buy_areas_store_address"
        android:layout_below="@+id/buy_areas_store_name"
        android:layout_toEndOf="@+id/buy_areas_store_logo"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:textColor="#888888"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buy_areas_store_phone"
        android:layout_below="@+id/buy_areas_store_address"
        android:layout_toEndOf="@+id/buy_areas_store_logo"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:textColor="#888888"/>

</RelativeLayout>