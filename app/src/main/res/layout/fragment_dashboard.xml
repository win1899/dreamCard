<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    android:orientation="vertical"
    tools:context=".view.activity.NavDrawerActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#DDDDDD"
                  android:orientation="vertical"
                  tools:context=".view.activity.NavDrawerActivity">

        <FrameLayout
            android:id="@+id/dashboard_fragment_holder"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            >
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_marginBottom="2dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_cash_points"
                    android:src="@drawable/points_icon"
                    android:text="Points"
                    style="@style/main_page_button"/>

                <ImageButton
                    android:id="@+id/btn_cash"
                    android:src="@drawable/cash_icon_inactive"
                    style="@style/main_page_button"/>

                <ImageButton
                    android:id="@+id/btn_mobile"
                    android:src="@drawable/mobile_icon_inactive"
                    android:text="Mobile"
                    style="@style/main_page_button"/>

                <ImageButton
                    android:id="@+id/btn_gas"
                    android:src="@drawable/gas_inactive"
                    android:text="Gas"
                    style="@style/main_page_button"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:src="@drawable/points_icon_inactive"
                    android:text="Points"
                    android:gravity="center_horizontal"
                    style="@style/main_page_button"/>

                <TextView
                    android:src="@drawable/cash_icon_inactive"
                    android:gravity="center_horizontal"
                    android:text="Cash"
                    style="@style/main_page_button"/>

                <TextView
                    android:src="@drawable/mobile_icon_inactive"
                    android:text="Mobile"
                    android:gravity="center_horizontal"
                    style="@style/main_page_button"/>

                <TextView
                    android:src="@drawable/gas_inactive"
                    android:text="Gas"
                    android:gravity="center_horizontal"
                    style="@style/main_page_button"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"

            android:background="#ffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/all_cats_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="كل الاقسام"
                    android:textSize="14sp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/left_arrow_circle"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/food_cat_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.25"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/food_drink_cat"/>
                <ImageView
                    android:id="@+id/fashion_cat_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.25"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fashion_cat"/>
                <ImageView
                    android:id="@+id/joy_cat_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.25"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/joy_cat"/>
                <ImageView
                    android:id="@+id/electronics_cat_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.25"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/electronics_cat"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="Food &amp; Drink"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#D84438"
                    android:textSize="12sp"
                    android:padding="1dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:padding="1dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Fashion"
                    android:textColor="#2EACB8"
                    android:textSize="12sp"
                    android:src="@drawable/fashion_cat"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:padding="1dp"
                    android:text="Fun &amp; Joy"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#B57971"
                    android:textSize="12sp"
                    android:src="@drawable/joy_cat"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Electronics"
                    android:textColor="#383745"
                    android:textSize="12sp"
                    android:padding="1dp"/>
            </LinearLayout>

        </LinearLayout>
        <!-- android:background="#DC3900"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".32"
            android:maxWidth="380dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/voucher_list"
                android:textColor="#888888"
                android:textSize="16sp" />

            <com.dreamcard.app.components.NonScrollableListView
                android:id="@+id/notifications_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="2dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>