<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="100dp"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_marginEnd="10dp"
    android:background="#ffffff"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/store_offer_pnl">

    <ImageView
        android:layout_width="wrap_content"
        android:maxWidth="85dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:id="@+id/img_offer_logo"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/img_offer_logo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_offer_name"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="aa"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_offer_price"
            android:textSize="18sp"
            android:textColor="#BF6832"
            android:text="a"
            android:layout_below="@+id/txt_offer_name"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>